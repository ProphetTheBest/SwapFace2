<resources>
    <!-- Tema principale dell'app -->
    <style name="Theme.FaceSwapApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori principali -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background e superfici -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Errori -->
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Tema per schermi con modalitÃ  scura -->
    <style name="Theme.FaceSwapApp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori principali -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background e superfici -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Errori -->
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>